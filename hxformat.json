{
    "wrapping": {
        "maxLineLength": 120,
        "callParameter": {
            "defaultWrap": "fillLine",
            "rules": [
                {
                    "conditions": [
                        {
                            "cond": "lineLength >= n",
                            "value": 120
                        }
                    ],
                    "type": "onePerLine"
                }
            ]
        },
        "functionSignature": {
            "defaultWrap": "fillLine",
            "rules": [
                {
                    "conditions": [
                        {
                            "cond": "lineLength >= n",
                            "value": 120
                        }
                    ],
                    "type": "onePerLine"
                }
            ]
        },
        "opAddSubChain": {
            "_comment": "https://github.com/HaxeCheckstyle/haxe-formatter/issues/685",
            "defaultWrap": "noWrap"
        }
    },
    "whitespace": {
        "colonPolicy": "after",
        "typeHintColonPolicy": "after"
    }
}